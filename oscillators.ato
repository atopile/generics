import Capacitor from "capacitors.ato"
import Pair from "interfaces.ato"

component Crystal:
    signal xin
    signal xout
    signal gnd

module Osccilator:
    xin = new Pair
    xout = new Pair

    signal gnd ~ xin.gnd
    gnd ~ xout.gnd

    crystal = new crystal
    load_cap_1 = new capacitor
    load_cap_2 = new capacitor

    crystal.xin ~ load_cap_1.1; load_cap_1.2 ~ gnd
    crystal.xout ~ load_cap_2.1; load_cap_2.2 ~ gnd